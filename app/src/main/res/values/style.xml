<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- add Dialog style -->
    <style name="dialog_basic_style" parent="Theme.AppCompat.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>

        <!-- 배경 dim 설정 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 0.0 (투명) ~ 1.0 (검정색) -->
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <style name="alert_dialog_delete_style" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarNeutralButtonStyle">@style/alert_dialog_normal_btn_black</item>
        <item name="buttonBarPositiveButtonStyle">@style/alert_dialog_delete_btn_red</item>
    </style>

    <style name="alert_dialog_normal_btn_black" parent="Widget.Material3.Button.TextButton.Dialog.Flush">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="alert_dialog_delete_btn_red" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/about_red</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
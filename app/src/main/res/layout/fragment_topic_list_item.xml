<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/topic_list_item_cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="15dp"
    app:contentPaddingBottom="30dp"
    app:contentPaddingLeft="20dp"
    app:contentPaddingRight="20dp"
    app:contentPaddingTop="30dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/topic_list_item_think_count"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:minWidth="0dp"
            android:paddingVertical="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/topic_list_item_topic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/topic_list_item_think_count" />

        <TextView
            android:id="@+id/topic_list_item_date_prefix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_date_prefix"
            android:textSize="14sp"
            app:layout_constraintBaseline_toBaselineOf="@id/topic_list_item_date"
            app:layout_constraintEnd_toStartOf="@id/topic_list_item_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/topic_list_item_date" />

        <TextView
            android:id="@+id/topic_list_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/topic_list_item_date_prefix"
            app:layout_constraintEnd_toStartOf="@id/topic_list_item_date_suffix"
            app:layout_constraintStart_toEndOf="@id/topic_list_item_date_prefix"
            app:layout_constraintTop_toBottomOf="@id/topic_list_item_topic" />

        <TextView
            android:id="@+id/topic_list_item_date_suffix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="@string/text_date_suffix"
            android:textSize="14sp"
            app:layout_constraintBaseline_toBaselineOf="@id/topic_list_item_date"
            app:layout_constraintBottom_toBottomOf="@id/topic_list_item_date"
            app:layout_constraintStart_toEndOf="@id/topic_list_item_date"
            app:layout_constraintTop_toTopOf="@id/topic_list_item_date" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
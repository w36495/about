<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_comment_delete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_comment_bottom_dialog"
        android:backgroundTint="@color/white"
        android:text="@string/dialog_btn_delete"
        android:textColor="@color/about_red"
        app:layout_constraintBottom_toTopOf="@id/btn_comment_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_comment_cancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_comment_bottom_dialog"
        android:backgroundTint="@color/white"
        android:text="@string/dialog_btn_cancel"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_comment_delete" />

</androidx.constraintlayout.widget.ConstraintLayout>